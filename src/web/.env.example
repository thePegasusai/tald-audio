# API Configuration
# Base URL for the TALD UNIA API endpoints
VITE_API_URL=http://localhost:3000
# API version for versioned endpoints
VITE_API_VERSION=v1
# API request timeout in milliseconds
VITE_API_TIMEOUT=30000
# Number of API retry attempts before failure
VITE_API_RETRY_ATTEMPTS=3

# WebSocket Configuration
# WebSocket server URL for real-time audio streaming
VITE_WEBSOCKET_URL=ws://localhost:3000
# Maximum number of reconnection attempts for WebSocket
VITE_WEBSOCKET_RECONNECTION_ATTEMPTS=3
# Delay between reconnection attempts in milliseconds
VITE_WEBSOCKET_RECONNECTION_DELAY=5000

# Audio Processing Configuration
# Audio buffer size in samples (power of 2)
VITE_AUDIO_BUFFER_SIZE=2048
# Sample rate in Hz for audio processing
VITE_AUDIO_SAMPLE_RATE=48000

# Authentication Configuration
# Auth0 domain for authentication
VITE_AUTH_DOMAIN=auth.tald-unia.com
# Auth0 client ID for application
VITE_AUTH_CLIENT_ID=your-client-id
# API audience for JWT tokens
VITE_AUTH_AUDIENCE=https://api.tald-unia.com
# OAuth scopes required for authentication
VITE_AUTH_SCOPE=openid profile email

# Development Configuration
# Enable debug logging for development
VITE_ENABLE_DEBUG_LOGGING=false